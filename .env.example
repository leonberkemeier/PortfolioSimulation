# Production environment variables
# Copy this file to .env and update with your values

# IMPORTANT: Change this to a secure random string in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-very-secret-key-change-this-in-production

# Database path (inside container)
DATABASE_URL=sqlite:////app/data/trading_simulator.db

# Path to financial data aggregator database
# Adjust this path to match your setup
FINANCIAL_DATA_DB_URL=sqlite:////financial_data/financial_data.db

# Token expiration in minutes (default: 7 days)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# API settings
API_HOST=0.0.0.0
API_PORT=8001

# Your domain for CORS (update for production)
FRONTEND_URL=https://yourdomain.com
