[Unit]
Description=Trading Simulator Backend API
After=network.target

[Service]
Type=simple
User=YOUR_USERNAME
WorkingDirectory=/var/www/PortfolioSimulation/Trading_Simulator/backend
Environment="PATH=/var/www/PortfolioSimulation/Trading_Simulator/backend/venv/bin"
ExecStart=/var/www/PortfolioSimulation/Trading_Simulator/backend/venv/bin/uvicorn src.api.main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
